html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport",content="width=device-width, initial-scale=1.0, minimum-scale=1.0")
    meta(name="mobile-web-app-capable",content="yes")
    block title
      title Base
    link(rel="stylesheet",href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet",href="/static/css/base.css")
    link(rel="stylesheet",href="/static/css/material.min.css")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700", type="text/css")

    //-link(rel="stylesheet",href="https://fonts.googleapis.com/icon?family=Material+Icons")
    //-link(rel="stylesheet",href="https://code.getmdl.io/1.3.0/material.indigo-pink.min.css")
    script(src="/static/js/material.min.js")
    script(src="/static/js/base.js")
    block pagestyle
  body(onload="bodyLoad()")
    div.mdl-layout.mdl-js-layout
        header.mdl-layout__header.mdl-layout__header--transparent.mdl-layout__header--scroll
            div.mdl-layout__header-row
                a(href="/").mdl-navigation__link
                    span.mdl-layout-title 300words
                div.mdl-layout-spacer
                nav.mdl-navigation
                    a.mdl-navigation__link(href="/welcome")
                        button.mdl-button.mdl-button.mdl-js-button.mdl-button--raised Join Now
        div.mdl-layout__drawer
            span.mdl-layout-title Title
            nav.mdl-navigation
                a.mdl-navigation__link(href="#") About Us
                a.mdl-navigation__link(href="#")   Why us?
                a.mdl-navigation__link(href="#")   Help
            div.mdl-layout-spacer
            nav.mdl-navigation
                a.mdl-navigation__link(href="#")   Logout
        
        main.mdl-layout__content
            div#myLoader
                div.mdl-card
                    div.mdl-grid
                        div.mdl-layout-spacer
                        div.mdl-cell
                            div(id="p2",class="mdl-progress mdl-js-progress mdl-progress__indeterminate")
                        div.mdl-layout-spacer
            div#thePage
                block body
                footer.mdl-mini-footer
                    div.mdl-mini-footer__left-section
                        div.mdl-logo writeeveryday
                        ul.mdl-mini-footer__link-list
                            li
                                a(href="#") ABOUT ME
                            li
                                a(href="#") HELP
                    div.mdl-mini-footer__right-section
                        span
                            a(href="https://github.com/clearnote01") GITHUB
